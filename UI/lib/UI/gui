#!/usr/local/bin/perl5.10.0
use lib qw(.. .); 
package UI; ## correct variable namespace
use UI;
use Getopt::Std;
#use vars qw(%opts $project $debug);
my $debug = 1;
### Option Processing ###
push @ARGV, qw(-g -d /media/sessions test-abc);
getopts('mcegsd:', \%opts); 
#print join $/, (%opts);
# d: wav_dir
# c: create project
# g: gui mode
# m: don't load state info
# e: don't load static effects data
# s: don't load static effects data cache
$project = shift;
$debug and print "project name: $project\n";
$project and $project_name = $project;
my $mode = 'tk';
#$ui = UI->new(mode => "Graphical");
$ui = UI::Graphical->new;
$ui->prepare; 
$ui->loop;
__END__
