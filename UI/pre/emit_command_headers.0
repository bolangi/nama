#!/usr/bin/env perl
my $list = <<COMMANDS;
mon
m
r
rec
off				z
vol				v
pan				p
version 		n
loop 
save_project    keep k
new_project		new    
load_project	load   
add_track		add    
generate_setup	setup  
list_marks		l      
show_setup 		show   
show_effects	sfx    
ecasound_start	T      
ecasound_stop	S      
add_effect		fx     
remove_effect	rfx    
renew_engine	renew  
mark			k   
start			t   
stop			st   
show_marks		sm  
rename_mark		rn  
COMMANDS

map{

	my @parts = my @all_parts = split " ", $_;
	my $full = shift @parts;
	my @short = @parts;
	push @abbrevs,	"_$full: " . join (" | " , @all_parts);
	push @stubs,   	"$full: _$full {}";
	push @commands,	"command: $full";

} split "\n", $list;

print join "\n", @commands, @abbrevs, @stubs ;
__END__
