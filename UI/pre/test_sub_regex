		my $re = qr{
		
				& # ampersand 
				? # optional
				$_ # iterator var (sub name)

				\s* # possibly spaces then
				\(? # open parenthesis

}x;
	  print "output"," : ", (/($re)/ and $1), $/;} @corpa;

