my @shortcuts = qw(

new    new_session
load   load_session
add    add_track
setup  generate_setup
l      list_marks
show   show_setup 
sfx    show_effects
T      ecasound_start
S      ecasound_stop
fx     add_effect
rfx    remove_effect
renew  renew_engine
k   mark
t   start
s   stop
sm  show_marks
rn  rename_mark
);

my $command;
my $stanza;
my ($long, $short);
while( @shortcuts) {
	$short = shift @shortcuts;
	$long = shift @shortcuts;
	$stanza .= "_$long: '$short' | '$long'\n";
	$stanza .= "$long: _$long {}\n\n";
	$command .= "command: $long\n";
}
print $command;
print $stanza;
	


