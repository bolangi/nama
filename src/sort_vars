#!/usr/bin/env perl
use File::Slurp;
use Modern::Perl;
my @lines;
push @lines, read_file("$ENV{MD}/src/declarations.pl"), read_file("$ENV{MD}/src/var_types.pl");
map{ chomp $_ } @lines;

my $category;
my %sorted_vars;

for my $l (@lines){
	if ( $l =~ /category:\s+(.+?)\s*$/ ){
		#say $l;
		$category = $1;
		$sorted_vars{$category} //= [];
		next;
	}
	if ($l =~ /^\s+[\$\%\@]/ or $l =~ /^\s+#/  or $l =~ /^\s*$/){
		#say $l;
		push @{$sorted_vars{$category}},$l;
			#unless $l =~ /@\w+_vars\b/; # @config_vars = 
	}
}
say <<END;
# This file has been auto-generated from declarations.pl and var_types.pl
#
# DO NOT EDIT THIS FILE
#
END
for my $c( keys %sorted_vars ){
	map { say } ("# category: $c\n", @{ $sorted_vars{$c} }, " ")
}
	
	
	
	

