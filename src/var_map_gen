#!/usr/bin/env perl
use Modern::Perl;
use File::Slurp;
print join $/, 
		#map  { split " ", $_ }  # store as key/value pairs
		grep { my @var = split " ", $_; @var == 2 } # take only substitutions
		grep{ ! /^\s*$/ }  	# skip blank lines
		map{ s/#.*$//; $_}  # remove comments
		split "\n", read_file("./config_map");
