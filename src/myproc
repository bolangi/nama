#!/bin/sh
# use -d for debugging output

# change to build directory nama/src

CUR_DIR=`dirname $0`
cd "$CUR_DIR"
# make sure this directory is accessible
chmod a+x .
./check_hash_keys

MD=..
LIBPATH=$MD/lib/Audio/Nama
LD=$MD/lib
TD=$MD/t
SD=$MD/script

./missing_files_list

echo "Cleaning output directories"
for d in $LD $SD; do rm -rf $d; mkdir -p $d; done
rm $TD/*.t
mkdir -p $LIBPATH

DEBUG=$1
./preproc $DEBUG -r Audio::Nama \
		-s $MD/src \
		-t $LIBPATH \
		-a p \
		-b pm 
mv $LIBPATH/Nama.pm $LIBPATH/../Nama.pm 
./preproc $DEBUG -s $MD/src \
         -t $MD/t  \
		 -r Audio::Nama \
		 -a t \
		 -b t
./generate_executable_stub
./makeman
rm *.tmp

# we don't want M:B to see files in src/
chmod a-x .
