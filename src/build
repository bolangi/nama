#!/bin/sh
CUR_DIR=`dirname $0`
cd "$CUR_DIR"
MD=..
TD=$MD/lib/Audio/Ecasound/Multitrack
if [ ! -d $TD ]; then
   mkdir -p $TD;
fi
if [ ! -d $MD/t ]		
then
   mkdir $MD/t
fi

./preproc -r Audio::Ecasound::Multitrack \
		-s $MD/src \
		-t $TD \
		-a p \
		-b pm 
mv $TD/Multitrack.pm $TD/../Multitrack.pm 
./preproc  -s $MD/src \
         -t $MD/t  \
		 -r Audio::Ecasound::Multitrack \
		 -a t \
		 -b t
cd ..
perl Makefile.PL
echo "Now you can go to the nama toplevel directory and type:"
echo -e "\tmake; make test"
echo "If you're happy with the result you can do:"
echo -e "\tmake install"
echo "****************************************"
